{
  "name": "webpack-tests",
  "version": "1.0.0",
  "main": "main.js",
  "license": "MIT",
  "scripts": {
    "start": "webpack-dev-server --mode development --open",
    "dev": "webpack --mode development",
    "prod": "webpack --mode production",
    "build": "npm-run-all build:* --parallel --race",
    "build:main": "webpack --mode production --config webpack.main.config.js",
    "build:renderer": "webpack --mode production --config webpack.renderer.config.js",
    "build:write-pkg-config": "node scripts/makePkgJsonForDist.js",
    "builder:build": "electron-builder build --publish never"
  },
  "build": {
    "appId": "test.softx.gr",
    "productName": "Webpack Test",
    "directories": {
      "buildResources": "resources",
      "output": "build",
      "app": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "msi"
      ]
    }
  },
  "devDependencies": {
    "@babel/core": "^7.4.0",
    "@babel/preset-env": "^7.4.2",
    "@babel/preset-react": "^7.0.0",
    "babel-loader": "^8.0.5",
    "css-loader": "^2.1.1",
    "electron": "^13.6.6",
    "electron-builder": "^20.39.0",
    "electron-is-dev": "^1.0.1",
    "electron-reload": "^1.4.0",
    "html-loader": "^0.5.5",
    "html-webpack-plugin": "^3.2.0",
    "mini-css-extract-plugin": "^0.5.0",
    "npm-run-all": "^4.1.5",
    "optimize-css-assets-webpack-plugin": "^5.0.1",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "terser-webpack-plugin": "^1.2.3",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0",
    "webpack-dev-server": "^3.2.1"
  }
}
